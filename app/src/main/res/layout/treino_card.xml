<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="3dp"
        android:id="@+id/treinocv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/nomeTreino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textviewcategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomeTreino"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:text="Categoria: " />

            <TextView
                android:id="@+id/textviewdificuldade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewcategoria"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:text="Dificuldade: " />

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomeTreino"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/textviewcategoria"
                android:text="Abdominais" />

            <TextView
                android:id="@+id/tvDificuldade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewcategoria"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/textviewdificuldade"
                android:text="1" />

            <TextView
                android:id="@+id/textviewrepeticoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewdificuldade"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:text="Repetições: " />

            <TextView
                android:id="@+id/tvRepeticoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/textviewdificuldade"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/textviewrepeticoes"
                android:text="12" />

            <TextView
                android:id="@+id/tvNumeroExercicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:layout_below="@+id/textviewdificuldade"
                android:layout_alignParentRight="true"
                android:text="12" />

            <TextView
                android:id="@+id/textviewNumeroExercicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewdificuldade"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/tvNumeroExercicios"
                android:paddingRight="20dp"
                android:text="Nr.Exercicios: " />

            <ImageButton
                android:id="@+id/ibSave"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/ic_save_black_24dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>